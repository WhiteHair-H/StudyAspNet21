@model MyPortpolio.Models.Managers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="col-lg col-md- ml-auto mr-auto">
    <div class="card card-login">

        <div class="section section-contacts" style="padding:40px 0;">
            <div class="row">
                <div class="col-md-11 ml-auto mr-auto">
                    <h3 class="text-center" style="color:black; margin-top:0; font-weight:bold;">관리</h3>
                    <dl class="row">
                        <dt class="col-sm-2">
                           구분
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cate)
                        </dd>
                        <dt class="col-sm-2">
                            제목
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Subject)
                        </dd>
                        <dt class="col-sm-2">
                            내용
                        </dt>
                        <dd class="col-sm-10">
                            @Html.Raw(Model.Contents)
                        </dd>
                        <dt class="col-sm-2">
                           등록일
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RegDate)
                        </dd>
                    </dl>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">수정</a>
                        <a asp-action="Index" class="btn btn-secondary">리스트</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
